<%= form_with scope: :book, url: books_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :url %><br>
    <%= form.text_field :url %>
  </p>
  <p>
    <%= form.label :pagination %><br>
    <%= form.text_field :pagination %>
  </p>
  <p>
    <%= form.label :format %><br>
    <%= form.text_field :format %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>